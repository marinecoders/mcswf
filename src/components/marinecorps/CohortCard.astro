---
import type { CollectionEntry } from 'astro:content'
import RedButton from '../buttons/RedButton.astro'

interface Props {
  title: string
  content: string
  startDate: string
  endDate: string
}

const { title, content, startDate, endDate } = Astro.props
---

<div class="w-1/2 p-4 bg-slate-200">
  <h3 class="text-4xl text-black font-extrabold text-center">{title}</h3>
  <div class="max-w-3xl mx-auto mt-5 text-center">
    <p class="text-lg text-slate-600 dark:text-slate-400">
      {startDate} - {endDate}
    </p>
    <p>
      {content}
    </p>
    <div>
      <RedButton href="#" text="APPLY NOW" />
    </div>
  </div>
</div>
