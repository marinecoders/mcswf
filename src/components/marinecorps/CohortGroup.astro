---
import Hero from './Hero.astro'
import CohortCard from './CohortCard.astro'
import { getCollection, getEntry, getEntries } from 'astro:content'

const entry = await getEntry('cohorts', '1')
const entries = await getCollection('cohorts')
---

<div class="h-screen snap-start pt-20">
  <!-- Heading -->
  <Hero
    padding="p-8"
    title="READY TO JOIN?"
    content="Lorem ipsum dolor sit amet. Et quae quibusdam sed consequatur iste nam asperiores facilis qui error iste qui quia tenetur est rerum dolorem. Eum eveniet placeat cum impedit officiis est odit asperiores."
  />
  <hr style="width:50%; margin-left:25%;color:gray" />
  <Hero padding="pt-2 pb-4" title="PREREQUISITES" />

  <!-- Grid of Prerequisites -->
  <div class="grid grid-cols-2">
    {
      entries.map((cohortEntry) => (
        <CohortCard
          title={cohortEntry.data.title}
          content={cohortEntry.data.content}
          startDate={cohortEntry.data.startDate}
          endDate={cohortEntry.data.endDate}
        />
      ))
    }
  </div>
</div>
