---
import Hero from './Hero.astro'
import CohortCard from './CohortCard.astro'
import { getCollection, getEntry, getEntries } from 'astro:content'

const entry = await getEntry('cohorts', '1')
const entries = await getCollection('cohorts')
---

<div class="flex h-screen pt-10">
  <!-- Left Column -->
  <div class="w-1/2 pt-5">
    <p class="pt-5 text-center">Ready to Apply?</p>
    <Hero padding="pt-10" title="JOIN THE COHORT THAT'S RIGHT FOR YOU." />
  </div>
  <!-- Right Column -->
  <div class="w-1/2 pt-5">
    <!-- Grid of Cohorts -->
    <div class="grid grid-cols-2">
      {
        entries.map((cohortEntry) => (
          <CohortCard
            title={cohortEntry.data.title}
            content={cohortEntry.data.content}
            startDate={cohortEntry.data.startDate}
            endDate={cohortEntry.data.endDate}
          />
        ))
      }
    </div>
  </div>
</div>
