---
interface Props {
  text: string
  href: string
  extras?: string
}
const { href, text, extras } = Astro.props
---

<a href={href}>
  <button
    type="button"
    class:list={[
      'inline-flex items-center justify-center shadow-lg px-8 py-2 mb-2 text-xs text-black font-semibold leading-loose transition-all bg-white text-mcswf-pinstripe border border-transparent rounded-md hover:ring-2 focus:outline-none focus:ring-2 ring-offset-white focus:ring-red-500 hover:ring-red-500 focus:ring-offset-2 focus:ring-offset-gray-800',
      extras,
    ]}
  >
    {text}
  </button>
</a>
