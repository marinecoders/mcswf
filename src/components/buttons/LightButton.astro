---
interface Props {
  text: string
  href: string
}
const { href, text } = Astro.props
---

<button
  type="button"
  class="inline-flex items-center justify-center gap-2 px-4 py-4 mb-2 text-sm font-semibold transition-all border border-transparent rounded-md hover:outline hover:outline-red-800 hover:outliune-red-500 text-slate-500 hover:bg-slate-100 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 text-slate-500 hover:bg-slate-700 hover:text-slate-300 focus:ring-offset-slate-800"
>
  <a href={href}>
    {text}
  </a>
</button>
