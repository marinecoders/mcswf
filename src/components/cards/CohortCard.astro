---
import RedButton from '../buttons/RedButton.astro'

interface Props {
  title: string
  content: string
  startDate: string
  endDate: string
}

const { title, content, startDate, endDate } = Astro.props
---

<div
  class="mx-10 sm:mb-0 mb-10 bg-mcswf-off-white rounded-lg shadow-2xl sm:p-7 p-2"
>
  <h3
    class="sm:text-4xl text-2xl sm:pt-10 pt-5 text-black font-extrabold text-center"
  >
    {title}
  </h3>
  <div class="max-w-3xl mx-auto mt-5 text-center">
    <p class="sm:text-lg text-base">
      {startDate} - {endDate}
    </p>
    <p>
      {content}
    </p>
    <div class="pt-20">
      <RedButton href="#" text="APPLY NOW" />
    </div>
  </div>
</div>
