---
import Icon from "astro-icon";

const { href = "", circularIcon = false, title="Shoes!", darkFontColor="white", fontColor="black" } = Astro.props

---

<div class="card bg-base-100 md:w-8/12 w-screen">
  <figure class="items-center md:px-10 md:pt-10">
    <img
      src= {
        circularIcon ? "https://dummyimage.com/1920x1920/fff/aaa"
        : "https://dummyimage.com/1920x1080/fff/aaa"
      }
      alt="Shoes"
      class={circularIcon ? "rounded-full" : "rounded-xl"}
    />
  </figure>
  <div class="card-body items-center text-center">
    <h2 class={"card-title font-medium pt-3 text-4xl " + fontColor + " dark:" + darkFontColor}>{title}</h2>
    <div class="card-actions">
      <button class="btn btn-primary">
        <a href={href}>
          <div class="pt-2 flex justify-center items-center ms-3">
            <p>LEARN MORE</p>
            <Icon width="24" pack="mdi" name="chevron-right"/></Icon>
          </div>
        </a>
      </button>
    </div>
  </div>
</div>
