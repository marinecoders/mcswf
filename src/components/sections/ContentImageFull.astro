---
import Hero from '../elements/Hero.astro'
import RedButton from '../buttons/RedButton.astro'

interface Props {
  title: string
  content?: string
  link?: string
  linkText?: string
  padding?: string
  flipped?: boolean
}

const {
  title,
  content = null,
  link = null,
  linkText = null,
  flipped = false,
  padding,
} = Astro.props
---

<section class="">
  <div
    class="gap-16 items-center py-8 px-4 mx-auto max-w-screen-xl md:grid md:grid-cols-2 md:py-16 md:px-6"
  >
    {
      flipped && (
        <div class="grid gird-cols-1 gap-4 mt-8">
          <img
            class="w-full rounded-lg"
            src="https://dummyimage.com/1080/fff/aaa"
            alt="office content 1"
          />
        </div>
      )
    }
    <div class="font-light text-gray-500 sm:text-lg text-gray-400">
      <h2
        class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 text-white text-center"
      >
        {title}
      </h2>
      <p class="mb-4">{content}</p>
      <div class="grid w-full gap-3 mt-8 sm:inline-flex sm:justify-center">
        <RedButton href={link} text={linkText} />
      </div>
    </div>
    {
      !flipped && (
        <div class="grid gird-cols-1 gap-4 mt-8">
          <img
            class="w-full rounded-lg"
            src="https://dummyimage.com/1080/fff/aaa"
            alt="office content 1"
          />
        </div>
      )
    }
  </div>
</section>
