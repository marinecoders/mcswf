---
import SiteBanner from '@components/SiteBanner.svelte';
import SiteNavHeader from '@components/SiteNavHeader.svelte';
import SiteBackgroundImg from '@components/SiteBackgroundImg.svelte';
import '../styles/global.css';
import '../styles/fonts.css';

interface Props {
  title?: string;
}

const { title = null } = Astro.props;
---

<!doctype html>
<html
  lang="en"
  class="overflow-hidden h-full">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Marine Corps Software Factory"
    />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <meta
      property="og:title"
      content="Marine Corps Software Factory"
    />
    <meta
      property="og:description"
      content="The Marine Corps Software Factory welcomes Marines from any MOS who have the aptitude, competence, and discipline to serve in key roles on software development teams."
    />
    <meta
      property="og:image"
      content="images/mcswf-badge.svg"
    />
    <title>MCSWF {title && '-'} {title}</title>
  </head>
  <body class="overflow-auto h-full w-full font-expressway text-white bg-mcswf-red">
    <SiteBanner />
    <SiteNavHeader client:only="svelte" />
    <SiteBackgroundImg />
    <main>
      <slot />
    </main>
  </body>
</html>
