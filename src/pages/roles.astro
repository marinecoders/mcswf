---
import Layout from '../layouts/Layout.astro'
import Card from '../components/cards/MCCard.astro'
import MerticCard from '../components/cards/MetricCard.astro'
import Hero from '../components/elements/Hero.astro'
import RedButton from '../components/buttons/RedButton.astro'

import '../styles/global.css'
import { imageConfig } from 'astro:assets'
---

<Layout title="ROLES">
  <div class="max-h-screen overflow-y-scroll scrollbar-hide snap-start snap-y snap-mandatory">
    <div class="h-screen overflow-y-scroll snap-start py-20">
      <Hero
        padding="md:pt-24"
        title="FIND THE ROLE THAT'S RIGHT FOR YOU"
      />
      <div
        class="md:grid grid-cols-2 gap-8 p-10 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-4 md:gap-12"
      >
        <div class="flex justify-center pb-5 md:pb-0">
          <Card
            fontColor="text-red-600"
            darkFontColor="text-red-600"
            title="SOFTWARE ENGINEER"
            circularIcon
          />
        </div>
        <div class="flex justify-center pb-5 md:pb-0">
          <Card
            fontColor="text-red-600"
            darkFontColor="text-red-600"
            title="PRODUCT DESIGNER"
            circularIcon
          />
        </div>
        <div class="flex justify-center pb-5 md:pb-0">
          <Card
            fontColor="text-red-600"
            darkFontColor="text-red-600"
            title="PRODUCT MANAGER"
            circularIcon
          />
        </div>
        <div class="flex justify-center pb-5 md:pb-0">
          <Card
            fontColor="text-red-600"
            darkFontColor="text-red-600"
            title="PLATFORM ENGINEER"
            circularIcon
          />
        </div>
      </div>
        <div class="flex items-center justify-center h-1/5">
          <div class="flex space-x-24 mt-8">
            <RedButton href="#" text="SEE JOB LISTINGS"/>
          </div>
        </div>
    </div>
  </div>
</Layout>
