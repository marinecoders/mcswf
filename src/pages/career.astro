---
import Layout from '../layouts/Layout.astro'
import Hero from '../components/elements/Hero.astro'
import Mission from '../components/sections/Mission.astro'
import Impact from '../components/sections/CareerImpact.astro'
import TrainingFlow from '../components/sections/TrainingFlow.astro'
import TrainingImpact from '../components/sections/TrainingImpact.astro'

import '../styles/global.css'
---

<Layout title="Welcome to Astro.">
  <div
    class="max-h-screen overflow-y-scroll scrollbar-hide snap-start snap-y snap-mandatory"
  >
    <div class="h-screen snap-start py-20">
      <Hero
        title="WE ARE THE MARINE CORPS SOFTWARE FACTORY"
        link="#"
        linkText="LEARN MORE"
        padding="pt-24"
      />
    </div>
    <div class="h-screen snap-start pt-20">
      <TrainingImpact />
    </div>
    <div class="h-screen snap-start py-12">
      <Mission />
    </div>

    <div class="h-screen snap-start">
      <Hero padding="p-24" title="NEXT STEPS" />
      <TrainingFlow />
    </div>
  </div>
</Layout>
