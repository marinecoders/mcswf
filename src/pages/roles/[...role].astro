---
import Layout from '../../layouts/Layout.astro'
import Card from '../../components/cards/MCCard.astro'
import MerticCard from '../../components/cards/MetricCard.astro'
import Hero from '../../components/elements/Hero.astro'
import RedButton from '../../components/buttons/RedButton.astro'
import AboutRole from "../../components/sections/AboutRole.astro";

import '../../styles/global.css'
import { imageConfig } from 'astro:assets'
import { getCollection, getEntry, getEntries } from 'astro:content'

export async function getStaticPaths() {
  const entries = await getCollection('roles')
  return entries.map(({ data }) => {
    return {
      params: { role: data.url },
      props: { data },
    }
  })
}
const { role } = Astro.params
const { data } = Astro.props
---

<Layout title={data.role_title}>
  <div class="max-h-screen overflow-y-scroll scrollbar-hide snap-start snap-y snap-mandatory">
      <div class="h-screen snap-start py-20">
          <Hero
              padding="md:pt-24"
              title={data.role_title}
          />
          <AboutRole />
      </div>
  </div>
</Layout>