---
import Layout from '../../layouts/Layout.astro'
import Hero from '../../components/elements/Hero.astro'

import Mission from '../../components/sections/AboutMission.astro'
import Vision from '../../components/sections/Vision.astro'
import Impact from '../../components/sections/AboutImpact.astro'
import '../../styles/global.css'
import { imageConfig } from 'astro:assets'
const posts = await Astro.glob('../../content/roles/*.md')
let side = 'left'
---

<Layout title="ABOUT">
  <div
    class="max-h-screen overflow-y-scroll scrollbar-hide snap-start snap-y snap-mandatory"
  >
    {
      posts.map((post) => {
        if (side == 'left') {
          side = 'right'
          return (
            <>
              <div class="h-screen snap-start py-20">
                <div class="flex h-screen">
                  <div class="w-1/2 p-4">
                    <Hero
                      title={post.frontmatter.role}
                      content={post.frontmatter.about}
                      link={"/roles/" + post.frontmatter.url}
                      padding="pt-48"
                      linkText="LEARN MORE"
                    />
                  </div>
                  <div class="w-1/2 p-4 bg-cover bg-no-repeat bg-slate-200 bg-[url('https://dummyimage.com/1080/fff/aaa')]" />
                </div>
              </div>
            </>
          )
        } else {
          side = 'left'
          return (
            <>
              <div class="h-screen snap-start py-20">
                <div class="flex h-screen">
                  <div class="w-1/2 p-4 bg-cover bg-no-repeat bg-slate-200 bg-[url('https://dummyimage.com/1080/fff/aaa')]" />
                  <div class="w-1/2 p-4">
                    <Hero
                      title={post.frontmatter.role}
                      content={post.frontmatter.about}
                      link={"/roles/" + post.frontmatter.url}
                      padding="pt-48"
                      linkText="LEARN MORE"
                    />
                  </div>
                </div>
              </div>
            </>
          )
        }
      })
    }
  </div>
</Layout>
