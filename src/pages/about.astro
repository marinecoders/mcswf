---
import Layout from '../layouts/Layout.astro'
import Hero from '../components/elements/Hero.svelte'
import ContentImageFull from '../components/sections/ContentImageFull.svelte'
import FooterFull from '../components/footer/FooterFull.svelte'
import RedButton from '../components/buttons/WhiteButton.svelte'
import MetricCard from '../components/cards/MetricCard.svelte'
import { getCollection, type CollectionEntry } from 'astro:content'
interface Props {
  entry: CollectionEntry<'aboutMetrics'>
}

import '../styles/global.css'

export async function getStaticPaths() {
  const aboutMetrics = await getCollection('aboutMetrics')
  return aboutMetrics.map((entry) => ({
    props: { entry },
  }))
}

const { entry } = Astro.props
---

<Layout title="About">
  <div
    class="absolute left-0 z-10 flex justify-center w-full align-middle top-24 h-5/6"
  >
    <img src="/ega.svg" />
  </div>
  <div
    class="relative max-h-screen overflow-y-scroll font-expressway red-radial-gradient scrollbar-hide"
  >
    <div
      class="relative z-20 py-20 h-[70vh] bg-[url('/images/marine.png')] md:bg-[99%_40%] md:bg-auto bg-cover bg-center"
    >
      <Hero
        padding="pt-24"
        title="WHO WE ARE"
        content="The Marine Corps Software Factory welcomes Marines from any MOS who have the aptitude, competence, and discipline to serve in key roles on software development teams."
      />
    </div>
    <div class="relative z-20 max-h-screen scrollbar-hide">
      <div class="hidden md:block">
        <div class="relative z-20 pt-6">
          <ContentImageFull
            link="#"
            linkText="LEARN MORE"
            title="OUR VISION"
            content="Upon arrival at the Marine Corps Software Factory, Marines are trained to fill the roles of a product team: product manager, software developer, and UI/UX designer. Over the course of their three-year assignment at MCSWF in Austin, Texas, they develop applications to support warfighters at the tactical edge. After their three-year tour in Austin, the teams are reassigned together to continue supporting MIG commanders throughout the fleet."
            image="images/marine_with_ar_lens.jpeg"
            imageClasses="md:h-[550px] md:w-[550px] md:min-w-[550px] scale-x-[-1]"
          />
        </div>
        <div class="relative z-20">
          <ContentImageFull
            flipped
            link="#"
            linkText="LEARN MORE"
            title="OUR MISSION"
            content="We provide software development, data analytics, and artificial intelligence operations capabilities to MIG commanders to help them close joint, coalition, and naval kill webs. These capabilities enhance Marine commanders' decision advantage across the full spectrum of military operations."
            image="images/marines_marathon.jpeg"
            imageClasses="md:h-[550px] md:w-[550px] md:min-w-[550px]"
          />
        </div>
        <div class="relative z-20">
          <ContentImageFull
            link="#"
            linkText="LEARN MORE"
            title="OUR IMPACT"
            content="By providing Marines with the skills to develop software and implement artificial intelligence, we are giving commanders the ability to quickly produce software and AI solutions at the tactical edge."
            image="images/marine_whiteboard.jpeg"
            imageClasses="md:h-[550px] md:w-[550px] md:min-w-[550px]"
          />
        </div>
      </div>
      <div class="md:hidden">
        <div class="relative z-20 pt-6">
          <ContentImageFull
            flipped
            link="#"
            linkText="LEARN MORE"
            title="OUR VISION"
            content="Upon arrival at the Marine Corps Software Factory, Marines are trained to fill the roles of a product team: product manager, software developer, and UI/UX designer. Over the course of their three-year assignment at MCSWF in Austin, Texas, they develop applications to support warfighters at the tactical edge. After their three-year tour in Austin, the teams are reassigned together to continue supporting MIG commanders throughout the fleet."
            image="images/marine_with_ar_lens.jpeg"
            imageClasses="md:h-[550px] md:w-[550px] md:min-w-[550px] scale-x-[-1]"
          />
        </div>
        <div class="relative z-20">
          <ContentImageFull
            flipped
            link="#"
            linkText="LEARN MORE"
            title="OUR MISSION"
            content="We provide software development, data analytics, and artificial intelligence operations capabilities to MIG commanders to help them close joint, coalition, and naval kill webs. These capabilities enhance Marine commanders' decision advantage across the full spectrum of military operations."
            image="images/marines_marathon.jpeg"
            imageClasses="md:h-[550px] md:w-[550px] md:min-w-[550px]"
          />
        </div>
        <div class="relative z-20">
          <ContentImageFull
            flipped
            link="#"
            linkText="LEARN MORE"
            title="OUR IMPACT"
            content="By providing Marines with the skills to develop software and implement artificial intelligence, we are giving commanders the ability to quickly produce software and AI solutions at the tactical edge."
            image="images/marine_whiteboard.jpeg"
            imageClasses="md:h-[550px] md:w-[550px] md:min-w-[550px]"
          />
        </div>
      </div>
      <!-- <div class="relative grid grid-cols-1 md:grid-cols-2 w-fit m-auto z-20">
        {
          entry.data.metrics.map((p) => (
            <div class="text-center m-12">
              <MetricCard icon={p.icon} value={p.value} metric={p.metric} />
            </div>
          ))
        }
      </div> -->
      <!-- last section of the page, can't use ContentImageFull because of the CTA icon... -->
      <div
        class="items-center max-w-screen-xl gap-16 px-4 py-8 mx-auto lg:grid lg:grid-cols-2 md:py-8 md:px-6"
      >
        <div class="flex justify-center">
          <img
            class="w-3/4 rounded-lg aspect-square object-cover md:h-[550px] md:w-[550px] md:min-w-[550px]"
            src="images/mcswf_marine_sgt.png"
          />
        </div>
        <div class="font-light text-white sm:text-lg">
          <div class="flex justify-center">
            <img
              src="icons/cta.svg"
