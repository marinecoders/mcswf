---
import Layout from '../layouts/Layout.astro'
import Hero from '../components/elements/Hero.svelte'
import ContentImageFull from '../components/sections/ContentImageFull.svelte'
import FooterFull from '../components/footer/FooterFull.svelte'
import ButtonCustom from '../components/buttons/ButtonCustom.svelte'
import MetricCard from '../components/cards/MetricCard.svelte'
import { getCollection, type CollectionEntry } from 'astro:content'
import { displaySiteBanner } from '../components/stores.js'
import '../styles/global.css'

displaySiteBanner.set(true)
const metrics = await getCollection('aboutMetrics')
---

<Layout title="About">
  <div
    class="fixed left-0 z-10 flex justify-center w-full align-middle top-24 h-5/6">
    <img src="/ega.svg" />
  </div>
  <div class="relative font-expressway red-radial-gradient scrollbar-hide">
    <div
      class="relative z-20 py-20 h-[60vh] bg-[url('/images/marine_pushup.png')] lg:bg-[40%_40%] lg:bg-no-repeat lg:bg-cover bg-cover bg-center">
      <div class="absolute inset-0 bg-gradient-to-t from-black">
        <Hero
          padding="pt-24"
          title="WHO WE ARE"
          content="The Marine Corps Software Factory welcomes Marines from any MOS who have the aptitude, competence, and discipline to serve in key roles on software development teams."
          contentClasses="pt-5"
        />
      </div>
    </div>
    <div class="relative z-20 scrollbar-hide">
      <div class="hidden lg:block">
        <div class="relative z-20 pt-6">
          <ContentImageFull
            link="#"
            linkText="LEARN MORE"
            title="OUR VISION"
            content="Upon arrival at the Marine Corps Software Factory, Marines are trained to fill the roles of a product team: product manager, software developer, and UI/UX designer. Over the course of their three-year assignment at MCSWF in Austin, Texas, they develop applications to support warfighters at the tactical edge. After their three-year tour in Austin, the teams are reassigned together to continue supporting MIG commanders throughout the fleet."
            image="/images/marine_start_with_why.jpeg"
            imageClasses=""
          />
        </div>
        <div class="relative z-20">
          <ContentImageFull
            flipped
            link="#"
            linkText="LEARN MORE"
            title="OUR MISSION"
            content="We provide software development, data analytics, and artificial intelligence operations capabilities to MIG commanders to help them close joint, coalition, and naval kill webs. These capabilities enhance Marine commanders' decision advantage across the full spectrum of military operations."
            image="/images/marines_marathon.jpeg"
          />
        </div>
        <div class="relative z-20">
          <ContentImageFull
            link="#"
            linkText="LEARN MORE"
            title="OUR IMPACT"
            content="By providing Marines with the skills to develop software and implement artificial intelligence, we are giving commanders the ability to quickly produce software and AI solutions at the tactical edge."
            image="/images/marine_flight_sim.jpeg"
          />
        </div>
      </div>
      <div class="lg:hidden">
        <div class="relative z-20 pt-6">
          <ContentImageFull
            flipped
            link="#"
            linkText="LEARN MORE"
            title="OUR VISION"
            content="Upon arrival at the Marine Corps Software Factory, Marines are trained to fill the roles of a product team: product manager, software developer, and UI/UX designer. Over the course of their three-year assignment at MCSWF in Austin, Texas, they develop applications to support warfighters at the tactical edge. After their three-year tour in Austin, the teams are reassigned together to continue supporting MIG commanders throughout the fleet."
            image="/images/marine_start_with_why.jpeg"
          />
        </div>
        <div class="relative z-20">
          <ContentImageFull
            flipped
            link="#"
            linkText="LEARN MORE"
            title="OUR MISSION"
            content="We provide software development, data analytics, and artificial intelligence operations capabilities to MIG commanders to help them close joint, coalition, and naval kill webs. These capabilities enhance Marine commanders' decision advantage across the full spectrum of military operations."
            image="/images/marines_marathon.jpeg"
          />
        </div>
        <div class="relative z-20">
          <ContentImageFull
            flipped
            link="#"
            linkText="LEARN MORE"
            title="OUR IMPACT"
            content="By providing Marines with the skills to develop software and implement artificial intelligence, we are giving commanders the ability to quickly produce software and AI solutions at the tactical edge."
            image="/images/marine_flight_sim.jpeg"
          />
        </div>
      </div>
      <div class="relative grid grid-cols-1 lg:grid-cols-4 w-fit m-auto z-20">
        {
          metrics?.map((item) =>
            item.data.metrics?.map((p) => (
              <div class="text-center m-12">
                <MetricCard icon={p.icon} value={p.value} metric={p.metric} />
              </div>
            ))
          )
        }
      </div>
      <!-- last section of the page, can't use ContentImageFull because of the CTA icon... -->
      <div
        class="items-center max-w-screen-xl gap-16 px-4 py-8 mx-auto lg:grid lg:grid-cols-2 lg:py-8 lg:px-6">
        <div class="flex justify-center">
          <img
            class="w-3/4 rounded-lg aspect-square object-cover"
            src="/images/marine_mcswf_coder.jpeg"
          />
        </div>
        <div class="font-light text-white sm:text-lg">
          <div class="flex justify-center">
            <img
              src="/icons/cta.svg"
              class="pt-12 lg:pt-0 lg:h-28 lg:w-28 lg:min-w-28"
            />
          </div>
          <h2
            class="mb-4 pt-8 leading-normal lg:pt-8 text-xl lg:text-[40px] font-extrabold tracking-tight text-center text-mcswf-gold">
            INTERESTED IN BEING A <br />PART OF THE MCSWF?
          </h2>
          <div class="grid w-full gap-3 mt-8 sm:inline-flex sm:justify-center">
            <ButtonCustom
              color="white"
              size="xl"
              customClasses="w-64"
              link="#"
              client:only>
              LEARN MORE
            </ButtonCustom>
          </div>
        </div>
      </div>
      <div class="pt-20">
        <FooterFull client:only />
      </div>
    </div>
  </div>
</Layout>
