---
interface Props {
  icon: string
  value: string
  metric: string
}

const { icon, value, metric } = Astro.props
---

<img
  class="w-72 h-72 mx-auto"
  src={icon}
  alt="Image Description"
/>
<div class="mt-2 sm:mt-4">
  <h3 class="text-4xl font-extrabold">{value}</h3>
  <p class="text-md">{metric}</p>
</div>
 